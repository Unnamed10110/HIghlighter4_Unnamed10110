<Window x:Class="Highlighter4.CaptureWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Capture Region"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        WindowState="Maximized"
        MouseDown="Window_MouseDown"
        MouseUp="Window_MouseUp"
        MouseMove="Window_MouseMove">
    
    <Grid>
        <!-- Semi-transparent overlay -->
        <Rectangle Name="OverlayBackground" 
                   Fill="Black" 
                   Opacity="0.2"
                   MouseDown="Window_MouseDown"
                   MouseUp="Window_MouseUp"
                   MouseMove="Window_MouseMove"/>
        
        <!-- Canvas for selection rectangle -->
        <Canvas>
            <Rectangle Name="SelectionRectangle"
                       Stroke="White"
                       StrokeThickness="1"
                       StrokeDashArray="5,5"
                       Fill="Transparent"
                       Visibility="Hidden"/>
        </Canvas>
        
        <!-- Instructions -->
        <TextBlock Text="Click and drag to select region. Release mouse to capture."
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   Margin="0,20,0,0"
                   Foreground="White"
                   Background="Black"
                   Padding="10,5"
                   FontSize="14"/>
    </Grid>
</Window>
