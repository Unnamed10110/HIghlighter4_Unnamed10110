<Window x:Class="Highlighter4.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Highlighter4 - Settings" 
        Height="600" 
        Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#FF0D1117"
        Foreground="White"
        WindowStyle="SingleBorderWindow"
        ResizeMode="CanResize"
        MinWidth="800"
        MinHeight="500">
    
    <Window.Resources>
        <!-- OLED Dark Theme -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="#FF21262D"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FF30363D"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF30363D"/>
                                <Setter Property="BorderBrush" Value="#FF58A6FF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF1F6FEB"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="SidebarButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#FF8B949E"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,15"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderThickness="0,0,3,0"
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                            VerticalAlignment="Center"
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF161B22"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="ActiveSidebarButton" TargetType="Button" BasedOn="{StaticResource SidebarButton}">
            <Setter Property="Background" Value="#FF161B22"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FF58A6FF"/>
        </Style>
        
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>
        
        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Margin" Value="0,8"/>
        </Style>
        
        <Style TargetType="ComboBox">
            <Setter Property="Background" Value="#FF21262D"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FF30363D"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="8,5"/>
        </Style>
        
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#FF21262D"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FF30363D"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="8,5"/>
            <Setter Property="CaretBrush" Value="White"/>
        </Style>
        
        <Style TargetType="GroupBox">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FF30363D"/>
            <Setter Property="Margin" Value="0,10"/>
            <Setter Property="Padding" Value="10"/>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!-- Left Sidebar -->
        <Border Grid.Column="0" Background="#FF0D1117" BorderBrush="#FF30363D" BorderThickness="0,0,1,0">
            <StackPanel>
                <TextBlock Text="âš™ï¸ SETTINGS" FontSize="18" FontWeight="Bold" Margin="20,20,20,30" Foreground="#FF58A6FF"/>
                
                <Button Name="GeneralTab" Content="ðŸ  General" Style="{StaticResource ActiveSidebarButton}" Click="GeneralTab_Click"/>
                <Button Name="HotkeysTab" Content="âŒ¨ï¸ Hotkeys" Style="{StaticResource SidebarButton}" Click="HotkeysTab_Click"/>
                <Button Name="CaptureTab" Content="ðŸ“¸ Capture" Style="{StaticResource SidebarButton}" Click="CaptureTab_Click"/>
                <Button Name="EditorTab" Content="ðŸŽ¨ Editor" Style="{StaticResource SidebarButton}" Click="EditorTab_Click"/>
                <Button Name="NotificationsTab" Content="ðŸ”” Notifications" Style="{StaticResource SidebarButton}" Click="NotificationsTab_Click"/>
                <Button Name="AdvancedTab" Content="ðŸ”§ Advanced" Style="{StaticResource SidebarButton}" Click="AdvancedTab_Click"/>
                <Button Name="AboutTab" Content="â„¹ï¸ About" Style="{StaticResource SidebarButton}" Click="AboutTab_Click"/>
            </StackPanel>
        </Border>
        
        <!-- Right Content Area -->
        <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto" Background="#FF0D1117">
            <StackPanel Name="ContentPanel" Margin="30,20">
                <!-- Content will be dynamically loaded here -->
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
